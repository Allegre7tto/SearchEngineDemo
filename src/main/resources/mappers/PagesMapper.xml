<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.SearchEngine.mapper.PagesMapper">

    <select id="selectTextFromPages" parameterType="String" resultType="java.util.List">
        SELECT id,text FROM #{table} LIMIT 16
        WHERE dic_done = 0
    </select>

    <update id="updateDicDone" parameterType="String">
        UPDATE #{table}
        SET dic_done = 1
            FROM (SELECT * FROM #{table} LIMIT 16) AS temp
        WHERE #{table}.id = temp.id
    </update>

    <!-- 获取文档总数 -->
    <select id="getTotalDocumentCount" resultType="int">
        SELECT COUNT(*) FROM pages
    </select>

    <!-- 获取所有文档ID -->
    <select id="getAllDocumentIds" resultType="int">
        SELECT id FROM pages
    </select>

    <!-- 获取文档内容 -->
    <select id="getDocumentContent" resultType="string">
        SELECT content FROM pages WHERE id = #{docId}
    </select>

    <!-- 获取文档长度 -->
    <select id="getDocumentLength" resultType="int">
        SELECT word_count FROM pages WHERE id = #{docId}
    </select>

    <!-- 获取平均文档长度 -->
    <select id="getAverageDocumentLength" resultType="double">
        SELECT AVG(word_count) FROM pages
    </select>

</mapper>